root.book("catch", fun(b){
    b.recipe("func", fun(r){
        r.add("extern/catch2/single_include", "*.hpp")
    })

    b.recipe("runner", TargetType.Executable, fun(r){
        r.depends_on("func")
        r.add("src", "catch_runner.cpp")
    })
})

root.book("gubg/std", fun(b){
    b.recipe("func", fun(r){
        r.add("src", "gubg/**.hpp")
    })

    b.recipe("ut", fun(r){
        r.add("test/src", "**.cpp")
        r.depends_on("func")
        r.depends_on("catch/func")
    })
})
